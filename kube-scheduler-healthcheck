#!/bin/sh
set -eu
TEST_POD_NAMESPACE="${TEST_POD_NAMESPACE:-kube-system}"
TEST_POD_IMAGE="${TEST_POD_IMAGE:-gcr.io/google_containers/pause:3.1}"
TEST_POD_NAME_POSTFIX="${TEST_POD_NAME_POSTFIX-'pod'}"
TEST_POD_NAME="scheduler-healthcheck-${TEST_POD_NAME_POSTFIX}"

cat > /tmp/pod.yaml <<endOfPodDef
apiVersion: v1
kind: Pod
metadata:
  name: ${TEST_POD_NAME}
spec:
  containers:
  - name: pause
    image: ${TEST_POD_IMAGE}
endOfPodDef

alias kubectl="timeout -t 30 kubectl --namespace \$TEST_POD_NAMESPACE"

kubectl delete pod $TEST_POD_NAME --grace-period=0 || true
sleep 1
kubectl delete pod $TEST_POD_NAME --grace-period=0 --force || true
kubectl create -f /tmp/pod.yaml
until [ "$(kubectl get pod ${TEST_POD_NAME} -o jsonpath='{.status.conditions[?(@.type == "PodScheduled")].status}')" == "True" ]; do
  kubectl get pod ${TEST_POD_NAME}
  kubectl get pod ${TEST_POD_NAME} -o jsonpath='{.status.conditions[?(@.type == "PodScheduled")].status}'
  sleep 1
done
kubectl delete pod $TEST_POD_NAME --grace-period=0 || true
sleep 1
kubectl delete pod $TEST_POD_NAME --grace-period=0 --force || true
